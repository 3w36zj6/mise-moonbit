#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force moonbit .
mise cache clear
mise install moonbit@latest

# Capture and display the output while also verifying it
output=$(mise exec "moonbit@latest" -- moon version)
echo "moon output: $output"

if echo "$output" | grep -qi 'moon'; then
    echo "✓ Tests passed"
else
    echo "✗ Test failed: expected 'moon' output"
    exit 1
fi
